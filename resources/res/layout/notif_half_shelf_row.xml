<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.notification.row.ChannelRow xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/half_shelf_row"
    android:padding="8dp"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Space
            android:layout_gravity="center_vertical"
            android:id="@+id/icon"
            android:padding="8dp"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/description_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="16sp"
                android:textColor="?android:^attr-private/materialColorOnSurface"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:id="@+id/channel_name"
                android:paddingBottom="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="@android:string/config_inCallNotificationSound"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?android:^attr-private/materialColorOnSurfaceVariant"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:id="@+id/channel_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_below="@+id/channel_name"
                android:fontFamily="@android:string/config_carrierAppInstallDialogComponent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </RelativeLayout>
        <Switch
            android:theme="@style/MainSwitch.Settingslib"
            android:layout_gravity="center_vertical"
            android:id="@+id/toggle"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:thumb="@drawable/settingslib_thumb_selector"
            android:track="@drawable/settingslib_track_selector"/>
    </LinearLayout>
</com.android.systemui.statusbar.notification.row.ChannelRow>
