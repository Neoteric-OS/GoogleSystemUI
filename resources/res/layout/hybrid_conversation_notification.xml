<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.notification.row.HybridConversationNotificationView xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="start|center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="12dp">
    <FrameLayout
        android:layout_width="@android:dimen/conversation_icon_container_top_padding"
        android:layout_height="@dimen/conversation_single_line_face_pile_size"
        android:paddingHorizontal="16dp">
        <ImageView
            android:layout_gravity="end|center_vertical"
            android:id="@android:id/datePicker"
            android:layout_width="@dimen/conversation_single_line_avatar_size"
            android:layout_height="@dimen/conversation_single_line_avatar_size"/>
        <ViewStub
            android:layout_gravity="end|center_vertical"
            android:id="@android:id/customPanel"
            android:layout="@android:layout/chooser_row_direct_share"
            android:layout_width="@dimen/conversation_single_line_face_pile_size"
            android:layout_height="@dimen/conversation_single_line_face_pile_size"/>
    </FrameLayout>
    <TextView
        android:textAppearance="@android:style/TextAppearance.Holo.Light"
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingEnd="8dp"/>
    <TextView
        android:id="@+id/conversation_notification_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingEnd="4dp"
        style="@android:style/Widget.DeviceDefault.QuickContactBadgeSmall.WindowMedium"/>
    <TextView
        android:id="@+id/notification_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingEnd="4dp"
        style="@android:style/Widget.DeviceDefault.QuickContactBadgeSmall.WindowMedium"/>
</com.android.systemui.statusbar.notification.row.HybridConversationNotificationView>
