<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editor_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:textColor="?android:^attr-private/materialColorOnPrimary"
        android:id="@+id/done_button"
        android:background="@drawable/overlay_button_background"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/clipboard_edit_text_done"
        android:layout_marginStart="12dp"
        android:backgroundTint="?android:^attr-private/materialColorPrimary"
        android:paddingHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/EditTextActivityButton"/>
    <TextView
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/attribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="@+id/done_button"
        app:layout_constraintTop_toBottomOf="@+id/done_button"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/attribution"
        app:layout_constraintTop_toBottomOf="@+id/attribution">
        <EditText
            android:textSize="24sp"
            android:gravity="start|top"
            android:id="@+id/edit_text"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
